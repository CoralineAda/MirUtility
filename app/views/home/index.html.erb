<%- title 'Welcome' -%>

<%- if logged_in? %>
  <p><strong>You are logged in as <%=h current_user.login %></strong></p>

  <%= link_to 'Logout', logout_path, :class => 'button' %>
<%- else %>
  <p><strong>You are currently not logged in.</strong></p>

  <%= link_to 'Login', login_path, :class => 'button' %>
  <%= link_to 'Sign Up', signup_path, :class => 'button' %>
<%- end %>
