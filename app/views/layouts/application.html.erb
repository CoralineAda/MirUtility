<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:v="urn:schemas-microsoft-com:vml">
<%- if @hcard -%>
<head profile="http://www.w3.org/2006/03/hcard">
<%- else -%>
<head>
<%- end -%>
  	<title><%= yield(:title) -%></title>
    <meta name="robots" content="noindex" />
    <meta name="description" content="<%= yield(:meta_description) || '' -%>" />
    <meta name="keywords" content="<%= yield(:meta_keywords) || '' -%>" />
    <link rel="canonical" href="<%= request.url -%>" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <%= stylesheet_link_tag 'core', :media => :all -%>
    <%= javascript_include_tag :defaults, :cache => "cache/all" -%>
    <%= yield(:head) -%>
  </head>

<body>

	<div id="header">

	  <div id="branding">
	    <!-- SEO Logic -->
	  </div>
	  <div id="metanav">

    	<%- if logged_in? -%>
    		<p>You are signed in as<br />
    		<%=h current_user.name -%>.</p>

    		<ul>
    		  <%- if admin? -%><li><%= link_to 'My Profile', user_url(current_user.id), :title => 'Go to My Profile' -%></li><%- end -%>
    		  <li><%= link_to 'Sign Out', logout_path -%></li>
    		</ul>
      <%- else -%>
        <p>You are not signed in.</p>
        <ul>
          <li><%= link_to "Sign In", login_path -%></li>
        </ul>
      <%- end -%>

    </div>


  </div>

    <div id="navigation">
      <%- set_active_tab -%>
      <%= render :partial => 'shared/nav_tabs' -%>
    </div>

	<div id="content" class="clearfix">
		<div id="content_main">
		  <h1><%= yield(:page_title) -%></h1>
  	  <div id="breadcrumbs"><%= breadcrumbs -%></div>
			<%- if flash[:error] -%>
			  <div class="flash_error" id="flash_error"><%= flash[:error] -%></div>
		  <%- end -%>

			<%- if flash[:notice] -%>
        <div class="flash_notice" style="display:none;" id="flash_notice"><%= flash[:notice] -%></div>
        <div id="washout" style="display:none;"></div>
        <script type="text/javascript">
			    $('washout').toggle();
			    $('flash_notice').toggle();
          <%= visual_effect :fade, 'flash_notice', :duration => 1.0, :delay => 1.0 -%>
          <%= visual_effect :fade, 'washout', :duration => 1.0, :delay => 1.0 -%>
        </script>
      <%- end -%>

			<%= @content_for_layout -%>

			<br style="clear: both;" /><br />

      <div id="footer">
        <div style="float: left; width: 40%; color: #ffffff">
          &copy; 2009 SEO Logic / Mir Internet Marketing, Inc. All rights reserved.
        </div>
        <div style="float: right; width: 40%; text-align: right; padding-right: 1em; color: #ffffff">
          <%= link_to 'Home', root_path -%>
        </div>
      </div>
		  <!-- End content -->
	  </div>
	</div>

  <script type="text/javascript">
    function showModalDialog(msg) {
      $('flash_notice').style.display = "block";
      $('washout').style.display = "block";
      $('flash_notice').innerHTML = msg;
      <%= visual_effect :fade, 'flash_notice', :duration => 1.0, :delay => 1.0 -%>
      <%= visual_effect :fade, 'washout', :duration => 1.0, :delay => 1.0 -%>
      return false;
    }
  </script>

</body>
</html>
